<ui:UiBinder
  xmlns:ui='urn:ui:com.google.gwt.uibinder'
  xmlns:g='urn:import:com.google.gwt.user.client.ui'
  xmlns:bazooka='urn:import:bazooka.client'>

  <g:DockLayoutPanel unit="EM">

    <g:north size="9">
      <bazooka:TopPanel ui:field="topPanel"/>
    </g:north>

    <g:center>
      <g:SplitLayoutPanel>

        <g:west size="350">
          <bazooka:ShortcutsPanel ui:field="shortcutsPanel"/>
        </g:west>

        <g:center>
          <bazooka:ContentPanel ui:field="contentPanel"/>
        </g:center>

      </g:SplitLayoutPanel>
    </g:center>

  </g:DockLayoutPanel>

</ui:UiBinder>