<ui:UiBinder
  xmlns:ui='urn:ui:com.google.gwt.uibinder'
  xmlns:g='urn:import:com.google.gwt.user.client.ui'
  xmlns:bazooka='urn:import:bazooka.client'>

  <g:ScrollPanel>
    <g:VerticalPanel>

      <g:HorizontalPanel spacing="10">
        <g:Button ui:field="newButton">New</g:Button>
        <g:Button ui:field="editButton" enabled="false">Edit</g:Button>
        <g:Button ui:field="deleteButton" enabled="false">Delete</g:Button>
      </g:HorizontalPanel>

      <g:VerticalPanel ui:field="shooterPanel" spacing="10"/>

    </g:VerticalPanel>
  </g:ScrollPanel>

</ui:UiBinder>