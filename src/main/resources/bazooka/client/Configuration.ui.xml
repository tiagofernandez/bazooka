<ui:UiBinder
  xmlns:ui='urn:ui:com.google.gwt.uibinder'
  xmlns:g='urn:import:com.google.gwt.user.client.ui'
  xmlns:bazooka='urn:import:bazooka.client'>

  <g:ScrollPanel>
    <g:VerticalPanel>

      <g:HorizontalPanel spacing="5">
        <g:ListBox ui:field="configList" visibleItemCount="1" selectedIndex="0"/>
        <g:Button ui:field="saveButton" enabled="false">Save</g:Button>
        <g:Button ui:field="deleteButton" enabled="false">Delete</g:Button>
        <g:Button ui:field="cloneButton">Clone</g:Button>
      </g:HorizontalPanel>

      <g:VerticalPanel spacing="5" ui:field="parametersPanel"/>

      <g:HorizontalPanel spacing="5">
        <g:Button ui:field="addParamButton">Add</g:Button>
        <g:Button ui:field="removeParamButton">Remove last</g:Button>
      </g:HorizontalPanel>

    </g:VerticalPanel>
  </g:ScrollPanel>

</ui:UiBinder>